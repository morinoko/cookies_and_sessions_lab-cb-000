<h1>Shopping Cart</h1>

<%= form_tag(controller: "products", action: "add_to_cart", method: "post") do %>
  <%= label_tag :product %>
  <%= text_field_tag :product %><br>

  <%= submit_tag "Add to Cart" %>
<% end %>

<h2>Currently in your cart:</h2>
<% if @products.count > 0 %>
  <ul>
    <% @products.each do |product| %>
      <li><%= product %></li>
    <% end %>
  </ul>
<% else %>
  <p>You don't have any items yet.</p>
<% end %>
